	<line color="#3D3D3D" x1="width-5" y1="1" x2="width-5" y2="1"/>
</draw_ops>

<draw_ops name="corners_outline_top">
	<!-- top left -->
	<line color="#3D3D3D" x1="1" y1="3" x2="1" y2="3"/>
	<line color="#3D3D3D" x1="1" y1="4" x2="1" y2="4"/>
