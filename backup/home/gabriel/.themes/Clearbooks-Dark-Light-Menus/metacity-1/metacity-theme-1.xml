<draw_ops name="corners_outline_selected_bottom">
	<!-- bottom left -->
	<line color="#3D3D3D" x1="1" y1="height-4" x2="1" y2="height-5"/>
	<line color="#3D3D3D" x1="2" y1="height-3" x2="2" y2="height-3"/>
	<line color="#3D3D3D" x1="2" y1="height-2" x2="4" y2="height-2"/>

	<!-- bottom right -->
	<line color="#3D3D3D" x1="width-2" y1="height-4" x2="width-2" y2="height-5"/>
	<line color="#3D3D3D" x1="width-3" y1="height-3" x2="width-3" y2="height-3"/>
	<line color="#3D3D3D" x1="width-4" y1="height-2" x2="width-5" y2="height-2"/>
